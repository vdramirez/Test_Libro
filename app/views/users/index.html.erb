<h1>Users</h1>

<h1>Listing users</h1>
<% if notice %>
    <p id="notice" ><%= notice %></p>
<% end %>


<table>
  <thead>
    <tr>
      <th> name</th>
      <th>Hashed password</th>
      <th>Salt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user. name %></td>
        <td><%= user.hashed_password %></td>
        <td><%= user.salt %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= button_to 'Destroy', user, :method => :delete, :confirm => 'Are you sure?' %></td>

      </tr>


    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
